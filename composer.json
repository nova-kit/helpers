{
    "name": "nova-kit/helpers",
    "description": "Useful helpers for Laravel Nova",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com"
        }
    ],
    "autoload": {
        "files": [
            "src/bootstrap.php"
        ]
    },
    "require": {
        "php": "^7.3 || ^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.25 || ^7.22 || ^8.0",
        "phpstan/phpstan": "^1.10.5",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "ci": "@php vendor/bin/phpstan analyse",
        "test": "@php vendor/bin/phpunit -c ./ --color"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
